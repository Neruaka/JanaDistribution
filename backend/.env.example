# ==========================================
# SERVER
# ==========================================
NODE_ENV=development
PORT=3000

# ==========================================
# DATABASE
# ==========================================
# Prefer DATABASE_URL in production platforms.
DATABASE_URL=
DB_HOST=localhost
DB_PORT=5432
DB_NAME=jana_distribution
DB_USER=postgres
DB_PASSWORD=change_me

# ==========================================
# REDIS
# ==========================================
# Prefer REDIS_URL in production platforms.
REDIS_URL=
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ==========================================
# AUTH
# ==========================================
JWT_SECRET=change_me_to_a_long_random_secret
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=change_me_to_a_long_random_refresh_secret
JWT_REFRESH_EXPIRES_IN=30d
BCRYPT_SALT_ROUNDS=12

# ==========================================
# SECURITY / CORS
# ==========================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=http://localhost:5173

# ==========================================
# LOGGING
# ==========================================
LOG_LEVEL=info

# ==========================================
# EMAIL (Brevo)
# ==========================================
BREVO_API_KEY=
BREVO_SENDER_EMAIL=noreply@example.com
BREVO_SENDER_NAME=Jana Distribution
FRONTEND_URL=http://localhost:5173
